<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/QMUIAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topBarHeight"
        android:hapticFeedbackEnabled="true"
        app:qmui_topbar_bg_color="@color/Gray"
        app:qmui_topbar_left_back_drawable_id="@mipmap/back_icon"
        app:qmui_topbar_need_separator="false"
        app:qmui_topbar_title_color="@color/white"
        tools:visibility="visible"
        />


    <lab.wesmartclothing.wefit.flyso.view.DateChoose
        android:id="@+id/mDateChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QMUIAppBarLayout"
        android:layout_centerHorizontal="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_below="@+id/mDateChoose"
        android:layout_marginTop="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/pro_heat"
            android:gravity="center">


            <TextView
                android:id="@+id/tv_title_Ingestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已摄入"
                android:textColor="@color/GrayWrite"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tv_Ingestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_Ingestion"
                android:text="0"
                android:textColor="@color/orange_FF7200"
                android:textSize="24sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_Ingestion"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_Ingestion"
                android:text="kcal"
                android:textColor="@color/GrayWrite"/>

        </RelativeLayout>


        <com.qmuiteam.qmui.widget.QMUIProgressBar
            android:id="@+id/pro_heat"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            app:qmui_background_color="@color/black_443C4A"
            app:qmui_max_value="100"
            app:qmui_progress_color="@color/orange_FF7200"
            app:qmui_stroke_round_cap="true"
            app:qmui_stroke_width="10dp"
            app:qmui_type="type_circle"
            app:qmui_value="1"/>


        <TextView
            android:id="@+id/tv_heat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="还可以摄入热量"
            android:textColor="@color/GrayWrite"
            android:textSize="10sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_heat_title"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:gravity="bottom"
                android:maxLength="6"
                android:text="0"
                android:textColor="@color/green_61D97F"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="2000"/>

            <TextView
                android:id="@+id/tv_heatUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dimen_2"
                android:text=" kcal"
                android:textColor="@color/green_61D97F"
                android:textSize="13sp"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/pro_heat"
            android:gravity="center">


            <TextView
                android:id="@+id/tv_title_consume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已消耗"
                android:textColor="@color/GrayWrite"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tv_consume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_consume"
                android:maxLength="6"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="24sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_consume"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_consume"
                android:text="kcal"
                android:textColor="@color/GrayWrite"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        android:padding="16dp">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/layout_breakfast"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="@dimen/dimen_8"
            android:padding="16dp"
            app:qmui_backgroundColor="@color/white"
            app:qmui_borderColor="@color/white"
            app:qmui_radius="4dp">

            <ImageView
                android:id="@+id/iv_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_8"
                android:background="@mipmap/icon_breakfast"/>

            <TextView
                android:id="@+id/tv_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_breakfast"
                android:text="早餐已摄入"
                android:textColor="@color/GrayWrite"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_breakfast_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_breakfast"
                android:layout_toRightOf="@+id/iv_breakfast"
                android:maxLength="5"
                android:maxLines="1"
                android:text="--"
                android:textColor="@color/orange_FF7200"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="231.0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_breakfast_kcal"
                android:layout_toRightOf="@+id/tv_breakfast_kcal"
                android:text=" kcal"
                android:textColor="@color/orange_FF7200"
                android:textSize="13sp"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_breakfast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/tv_breakfast"/>


            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_add"/>


        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/layout_lunch"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="@dimen/dimen_8"
            android:padding="16dp"
            app:qmui_backgroundColor="@color/white"
            app:qmui_borderColor="@color/white"
            app:qmui_radius="4dp">

            <ImageView
                android:id="@+id/iv_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_8"
                android:background="@mipmap/icon_lunch"/>

            <TextView
                android:id="@+id/tv_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_lunch"
                android:text="午餐已摄入"
                android:textColor="@color/GrayWrite"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_lunch_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lunch"
                android:layout_toRightOf="@+id/iv_lunch"
                android:maxLength="5"
                android:text="--"
                android:textColor="@color/orange_FF7200"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="223"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_lunch_kcal"
                android:layout_toRightOf="@+id/tv_lunch_kcal"
                android:text=" kcal"
                android:textColor="@color/orange_FF7200"
                android:textSize="13sp"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_lunch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/tv_lunch"/>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_add"/>


        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/layout_dinner"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="@dimen/dimen_8"
            android:background="@color/white"
            android:padding="16dp"
            app:qmui_backgroundColor="@color/white"
            app:qmui_borderColor="@color/white"
            app:qmui_radius="4dp">

            <ImageView
                android:id="@+id/iv_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_8"
                android:background="@mipmap/icon_dinner"/>

            <TextView
                android:id="@+id/tv_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_dinner"
                android:text="晚餐已摄入"
                android:textColor="@color/GrayWrite"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_dinner_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dinner"
                android:layout_toRightOf="@+id/iv_dinner"
                android:maxLength="5"
                android:text="--"
                android:textColor="@color/orange_FF7200"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="223"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_dinner_kcal"
                android:layout_toRightOf="@+id/tv_dinner_kcal"
                android:text=" kcal"
                android:textColor="@color/orange_FF7200"
                android:textSize="13sp"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_dinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/tv_dinner"/>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_add"/>


        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
            android:id="@+id/layout_meal"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/white"
            android:padding="16dp"
            app:qmui_backgroundColor="@color/white"
            app:qmui_borderColor="@color/white"
            app:qmui_radius="4dp">

            <ImageView
                android:id="@+id/iv_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_8"
                android:background="@mipmap/icon_meal"/>

            <TextView
                android:id="@+id/tv_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_meal"
                android:text="加餐已摄入"
                android:textColor="@color/GrayWrite"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_meal_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_meal"
                android:layout_toRightOf="@+id/iv_meal"
                android:maxLength="5"
                android:text="--"
                android:textColor="@color/orange_FF7200"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="223"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_meal_kcal"
                android:layout_toRightOf="@+id/tv_meal_kcal"
                android:text=" kcal"
                android:textColor="@color/orange_FF7200"
                android:textSize="13sp"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_meal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/tv_meal"/>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_add"/>

        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>
    </LinearLayout>


</RelativeLayout>