<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp">


    <ImageView
        android:id="@+id/img_weight"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        tools:src="@mipmap/icon_scale_view"
        />


    <TextView
        android:id="@+id/tv_weight_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_weight"
        android:lineSpacingExtra="2dp"
        android:text="我是你的瘦身衣"
        android:textColor="@color/textColor"
        android:textSize="16sp"/>

    <com.vondear.rxtools.view.roundprogressbar.RxRoundProgressBar
        android:id="@+id/pro_rssi"
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:layout_below="@+id/tv_weight_data"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_weight"
        app:rcBackgroundColor="#FFC3C5CA"
        app:rcProgressColor="@color/green_61D97F"
        app:rcRadius="2dp">

    </com.vondear.rxtools.view.roundprogressbar.RxRoundProgressBar>


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/tv_Bind"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_15"
        android:text="@string/bind"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:qmui_backgroundColor="@color/green_61D97F"
        app:qmui_borderColor="@color/green_61D97F"
        app:qmui_radius="16dp"/>


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/tv_bindings"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_15"
        android:enabled="false"
        android:text="@string/bindings"
        android:textColor="@color/green_61D97F"
        android:textSize="13sp"
        android:visibility="gone"
        app:qmui_backgroundColor="@color/white"
        app:qmui_borderColor="@color/green_61D97F"
        app:qmui_radius="16dp"/>


</RelativeLayout>