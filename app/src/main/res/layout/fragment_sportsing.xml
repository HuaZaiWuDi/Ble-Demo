<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/QMUIAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topBarHeight"
        android:hapticFeedbackEnabled="true"
        app:qmui_topbar_bg_color="@color/Gray"
        app:qmui_topbar_left_back_drawable_id="@mipmap/back_icon"
        app:qmui_topbar_need_separator="false"
        app:qmui_topbar_title_color="@color/white"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/topBarHeight"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/sportsStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="2dp"
            android:text="运动状态："
            android:textColor="@color/GrayWrite"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_sportsStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sportsStatus"
            android:text="开始热身"
            android:textColor="@color/brown_ABA08E"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_toLeftOf="@+id/sw_music"
            android:text="提示音："
            android:textColor="@color/GrayWrite"
            android:textSize="13sp"/>


        <com.vondear.rxtools.view.SwitchView
            android:id="@+id/sw_music"
            android:layout_width="40dp"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_16"
            app:hasShadow="true"
            app:isOpened="false"
            app:offColor="@color/GrayWrite"
            app:offColorDark="@color/GrayWrite"
            app:primaryColor="@color/green_61D97F"
            />


        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sw_music"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:maxLength="7"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="72sp"
            tools:text="68.7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_kcal"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/tv_kcal"
            android:text="kcal"
            android:textColor="@color/GrayWrite"
            android:textSize="18sp"/>

        <View
            android:layout_width="@dimen/dimen_35"
            android:layout_height="@dimen/dimen_1"
            android:layout_below="@+id/tv_kcal"
            android:layout_marginTop="@dimen/dimen_50"
            android:background="@color/GrayWrite"/>

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_kcal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:text="保持燃脂衣与App的连接，可提高数据数据准确性 如关闭或脱掉减肥衣将自动结束本次运动"
            android:textColor="@color/GrayWrite"
            android:textSize="11sp"/>


        <View
            android:layout_width="@dimen/dimen_35"
            android:layout_height="@dimen/dimen_1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_kcal"
            android:layout_marginTop="@dimen/dimen_50"
            android:background="@color/GrayWrite"/>


        <LinearLayout
            android:id="@+id/layout_sports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_kcal"
            android:layout_marginTop="104dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_av_heartrate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前心率"
                    android:textColor="@color/GrayWrite"
                    android:textSize="11sp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_avHeartRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        tools:text="110"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\tbpm"
                        android:textColor="@color/GrayWrite"
                        android:textSize="18sp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_max_heartrate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最大心率"
                    android:textColor="@color/GrayWrite"
                    android:textSize="11sp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_maxHeartRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        tools:text="110"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\tbpm"
                        android:textColor="@color/GrayWrite"
                        android:textSize="18sp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_time"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动时间"
                    android:textColor="@color/GrayWrite"
                    android:textSize="11sp"/>


                <TextView
                    android:id="@+id/tv_sportsTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00'00''"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    tools:text="12'02''"/>

            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_sports"
            android:layout_marginTop="30dp"
            android:background="#443C4A"
            android:orientation="horizontal">


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineCHart_HeartRate"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.github.mikephil.charting.charts.LineChart>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_16"
                android:orientation="vertical">


                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="36dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@string/limit"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:qmui_backgroundColor="@color/red"
                    app:qmui_borderColor="#443C4A"/>

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="36dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="9dp"
                    android:text="@string/anaerobic"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:qmui_backgroundColor="@color/orange_FF7200"
                    app:qmui_borderColor="#443C4A"/>

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="36dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="9dp"
                    android:text="@string/aerobic"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:qmui_backgroundColor="@color/green_61D97F"
                    app:qmui_borderColor="#443C4A"/>

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="36dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="9dp"
                    android:text="@string/grease"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:qmui_backgroundColor="@color/yellow_FFBC00"
                    app:qmui_borderColor="#443C4A"/>

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="36dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="9dp"
                    android:text="@string/warm"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:qmui_backgroundColor="@color/brown_ABA08E"
                    app:qmui_borderColor="#443C4A"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>