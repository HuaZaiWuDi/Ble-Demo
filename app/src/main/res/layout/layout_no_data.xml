<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_no_data"
        android:layout_width="@dimen/d_500"
        android:layout_height="@dimen/d_450"
        android:layout_centerInParent="true"
        android:src="@drawable/no_massage_pic"/>

    <TextView
        android:layout_width="@dimen/d_300"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_no_data"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/no_data"
        android:textColor="@color/textHeatColor"/>

</RelativeLayout>