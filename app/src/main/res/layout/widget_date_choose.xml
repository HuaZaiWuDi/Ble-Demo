<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="108px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="108px"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_last"
            android:layout_width="130px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:onClick="iv_last"
            android:padding="@dimen/d_40"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:src="@drawable/arrow_left_icon"
            android:text="Last"
            android:textColor="@color/colorFontWhite"/>

        <LinearLayout
            android:id="@+id/ll_date_container"
            android:layout_width="350px"
            android:layout_height="match_parent"
            android:background="@drawable/shape_calender_bg"
            android:gravity="center"
            android:onClick="date"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="4æœˆ28"
                android:textColor="@color/colorFontWhite"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d_30"
                android:src="@drawable/arrow_down_icon"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="130px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="iv_next"
            android:padding="@dimen/d_40"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:src="@drawable/arrow_right_icon"
            android:textColor="@color/colorFontWhite"/>


    </LinearLayout>

</RelativeLayout>