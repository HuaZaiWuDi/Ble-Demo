<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.login.LoginActivity">


    <RelativeLayout
        android:id="@+id/heard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_bj3x">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo_l"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_300"
        android:layout_below="@+id/heard"
        android:paddingLeft="@dimen/d_100"
        android:paddingRight="@dimen/d_100"
        android:paddingTop="@dimen/d_80">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_phone3x"
            android:drawablePadding="@dimen/d_20"
            android:text="@string/phone"
            android:textColor="@color/black"
            tools:text="手机"/>

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone"
            android:layout_marginLeft="@dimen/d_200"
            android:layout_marginTop="@dimen/d_40"
            android:background="@null"
            android:hint="@string/inputPhone"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textSize="@dimen/d_50"
            tools:text="13888888888"/>

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone"
            android:layout_marginTop="@dimen/d_40"
            android:drawableRight="@mipmap/icon_xiala3x"
            android:text="+86"
            android:textSize="@dimen/d_60"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_1"
            android:layout_below="@+id/edit_phone"
            android:layout_marginTop="@dimen/d_40"
            android:background="@color/textColor"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_VCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_300"
        android:layout_below="@+id/layout_phone"
        android:paddingLeft="@dimen/d_100"
        android:paddingRight="@dimen/d_100"
        android:paddingTop="@dimen/d_80">

        <TextView
            android:id="@+id/tv_VCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_yanzhengma3x"
            android:drawablePadding="@dimen/d_20"
            android:text="@string/VCode"
            android:textColor="@color/black"
            tools:text="验证码"/>

        <EditText
            android:id="@+id/edit_VCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_VCode"
            android:layout_marginRight="@dimen/d_20"
            android:layout_marginTop="@dimen/d_40"
            android:layout_toLeftOf="@+id/tv_countDown"
            android:background="@null"
            android:hint="@string/inputVCode"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLength="6"
            android:maxLines="1"
            android:textSize="@dimen/d_50"
            tools:text="888888"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_1"
            android:layout_below="@+id/edit_VCode"
            android:layout_marginRight="@dimen/d_20"
            android:layout_marginTop="@dimen/d_40"
            android:layout_toLeftOf="@+id/tv_countDown"
            android:background="@color/black"/>


        <TextView
            android:id="@+id/tv_countDown"
            android:layout_width="@dimen/d_250"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/d_80"
            android:background="@mipmap/confirm_button"
            android:gravity="center"
            android:text="@string/getVCode"
            android:textColor="@color/white"/>


    </RelativeLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/d_350"
        android:layout_height="180px"
        android:layout_below="@+id/layout_VCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/d_100"
        android:background="@mipmap/bt_03"
        android:paddingBottom="@dimen/d_50"
        android:text="@string/login"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/d_50"
        android:text="@string/login_clause"
        android:textColor="@color/textColor"
        android:textSize="@dimen/d_30"/>

</RelativeLayout>