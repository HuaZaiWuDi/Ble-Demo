<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/d_50">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_50"
        app:srcCompat="@mipmap/leave_icon"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lineColor"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/d_500"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d_150"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="@dimen/d_50"
        android:gravity="center"
        android:text="你还有未领取的体重数据， 离开后将全部被忽略"
        android:textColor="@color/textHeatColor"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_100"
        android:layout_marginRight="@dimen/d_100"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_leave"
            android:layout_width="@dimen/d_300"
            android:layout_height="@dimen/d_100"
            android:background="@mipmap/leave_button"
            android:text="@string/btn_leave"
            android:textColor="@color/colorWhite"/>


        <Button
            android:id="@+id/btn_receive"
            android:layout_width="@dimen/d_300"
            android:layout_height="@dimen/d_100"
            android:layout_marginStart="@dimen/d_100"
            android:background="@mipmap/continue_button"
            android:text="@string/btn_continue"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>


</LinearLayout>