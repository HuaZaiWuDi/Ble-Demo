<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_35"
        android:background="@null"
        android:drawableLeft="@mipmap/icon_lock"
        android:drawablePadding="10dp"
        android:hint="@string/pleaseInputPassword"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:textColor="@color/Gray"
        android:textColorHint="@color/GrayWrite"
        android:textSize="@dimen/dimen_15"
        tools:text="我是密码框"/>


    <LinearLayout
        android:id="@+id/layout_switch_password"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_biyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_hide_password"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_below="@+id/edit_password"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@color/BrightGray"/>

</RelativeLayout>