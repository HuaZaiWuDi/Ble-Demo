<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.qmuiteam.qmui.widget.QMUIAppBarLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:fitsSystemWindows="true">

        <com.qmuiteam.qmui.widget.QMUICollapsingTopBarLayout
            android:id="@+id/collapsing_topbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/qmui_topbar_height"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:qmui_contentScrim="@color/Gray"
            app:qmui_statusBarScrim="@color/Gray"
            app:titleEnabled="false">

            <!--title-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:background="@color/Gray"
                android:contentDescription="@string/app_name"
                android:fitsSystemWindows="false"
                android:padding="16dp"
                app:qmui_layout_collapseMode="parallax"
                app:qmui_layout_collapseParallaxMultiplier="0.7"
                tools:visibility="visible">


                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/iv_userImg"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_16"
                    android:src="@mipmap/userimg"
                    app:qmui_corner_radius="@dimen/dimen_32"/>


                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/layout_notify"
                    android:layout_toRightOf="@+id/iv_userImg"
                    android:ellipsize="end"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:text="我是用户名"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>


                <RelativeLayout
                    android:id="@+id/layout_progress"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_userName"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_toRightOf="@+id/iv_userImg">


                    <TextView
                        android:id="@+id/tv_weight_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--kg"
                        android:textColor="@color/white"
                        android:textSize="8sp"/>

                    <TextView
                        android:id="@+id/tv_weight_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="--kg"
                        android:textColor="@color/white"
                        android:textSize="8sp"/>


                    <com.vondear.rxtools.view.roundprogressbar.RxRoundProgressBar
                        android:id="@+id/pro_weight"
                        android:layout_width="110dp"
                        android:layout_height="6dp"
                        android:layout_below="@+id/tv_weight_start"
                        android:layout_marginTop="@dimen/dimen_3"
                        android:max="100"
                        android:progress="30"
                        app:rcBackgroundColor="@color/GrayWrite"
                        app:rcMax="100"
                        app:rcProgress="0"
                        app:rcProgressColor="@color/white"
                        app:rcRadius="3dp"
                        />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_progress"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_toRightOf="@+id/iv_userImg"
                    android:text="请到体重记录页设定小目标哟！ ^-^"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>


                <LinearLayout
                    android:id="@+id/layout_notify"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_alignParentRight="true"
                    android:gravity="top|right">


                    <ImageView
                        android:id="@+id/iv_notify"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/icon_email_white"/>

                </LinearLayout>


            </RelativeLayout>


            <com.qmuiteam.qmui.widget.QMUITopBar
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/qmui_topbar_height"
                android:fitsSystemWindows="true"
                android:paddingLeft="@dimen/dimen_16"
                android:paddingRight="@dimen/dimen_16"
                android:visibility="visible"
                app:qmui_layout_collapseMode="pin"
                app:qmui_topbar_bg_color="@color/qmui_config_color_transparent"
                app:qmui_topbar_need_separator="false"/>

            <RelativeLayout
                android:id="@+id/layout_title2"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/Gray"
                android:paddingBottom="@dimen/dimen_16"
                android:paddingLeft="@dimen/dimen_16"
                android:paddingTop="20dp"
                android:visibility="invisible"
                app:qmui_layout_collapseMode="pin">


                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/iv_userImg2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/userimg"
                    app:qmui_is_circle="true"/>


                <TextView
                    android:id="@+id/tv_userName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_toRightOf="@+id/iv_userImg2"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>


                <LinearLayout
                    android:id="@+id/layout_notify2"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:gravity="bottom|center_horizontal">


                    <ImageView
                        android:id="@+id/iv_notify2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/icon_email_white"/>

                </LinearLayout>

            </RelativeLayout>


        </com.qmuiteam.qmui.widget.QMUICollapsingTopBarLayout>
    </com.qmuiteam.qmui.widget.QMUIAppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/bottom_padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_F7F7F9"
            android:orientation="vertical">


            <!--健康评级-->
            <RelativeLayout
                android:id="@+id/layout_Healthy"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:background="@color/white"
                android:padding="@dimen/dimen_16"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/iv_Healthy"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:background="@mipmap/icon_healthy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:layout_toRightOf="@+id/iv_Healthy"
                    android:text="健康评级"
                    android:textColor="@color/Gray"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:layout_below="@+id/iv_Healthy"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_17"
                    android:background="@color/line"/>


                <LinearLayout
                    android:id="@+id/layout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身材："
                        android:textColor="@color/GrayWrite"
                        android:textSize="13sp"/>


                    <TextView
                        android:id="@+id/tv_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未知"
                        android:textColor="@color/Gray"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_24"
                        android:text="患病风险："
                        android:textColor="@color/GrayWrite"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_risk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未知"
                        android:textColor="@color/Gray"
                        android:textSize="15sp"
                        android:textStyle="bold"/>


                </LinearLayout>

                <lab.wesmartclothing.wefit.flyso.view.HealthLevelView
                    android:id="@+id/Healthy_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_title"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/Gray"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:text="体重（kg）"
                        android:textColor="@color/GrayWrite"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tv_BMI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_24"
                        android:text="--"
                        android:textColor="@color/Gray"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:text="BMI"
                        android:textColor="@color/GrayWrite"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tv_bodyFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_24"
                        android:text="--"
                        android:textColor="@color/Gray"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:text="体脂率（%）"
                        android:textColor="@color/GrayWrite"
                        android:textSize="10sp"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/line"
                    android:textColor="@color/GrayWrite"
                    android:textSize="10sp"/>

            </RelativeLayout>

            <!--热量记录-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:layout_margin="@dimen/dimen_8"
                android:orientation="horizontal"
                tools:visibility="visible">

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                    android:id="@+id/layout_heat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    app:qmui_backgroundColor="@color/white"
                    app:qmui_borderColor="@color/white"
                    app:qmui_radius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingRight="@dimen/dimen_16">

                        <ImageView
                            android:id="@+id/iv_heat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/icon_heat"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_toRightOf="@+id/iv_heat"
                            android:text="热量记录"
                            android:textColor="@color/Gray"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/icon_goto"/>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5"
                        android:background="@color/line"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <com.qmuiteam.qmui.widget.QMUIProgressBar
                            android:id="@+id/circleProgressBar"
                            android:layout_width="136dp"
                            android:layout_height="136dp"
                            android:layout_centerInParent="true"
                            app:qmui_background_color="@color/BrightGray"
                            app:qmui_max_value="100"
                            app:qmui_progress_color="@color/orange_FF7200"
                            app:qmui_stroke_round_cap="true"
                            app:qmui_stroke_width="10dp"
                            app:qmui_type="type_circle"
                            app:qmui_value="1"/>

                        <TextView
                            android:id="@+id/tv_heat_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="74dp"
                            android:text="还可以摄入热量"
                            android:textColor="@color/GrayWrite"
                            android:textSize="10sp"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_heat_title"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_kcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:gravity="bottom"
                                android:maxLength="6"
                                android:text="0"
                                android:textColor="@color/green_61D97F"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                tools:text="2000"/>

                            <TextView
                                android:id="@+id/tv_heatUnit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="@dimen/dimen_2"
                                android:text=" kcal"
                                android:textColor="@color/green_61D97F"
                                android:textSize="13sp"/>

                        </LinearLayout>


                    </RelativeLayout>


                </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                        android:id="@+id/layout_breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingRight="@dimen/dimen_16"
                        app:qmui_backgroundColor="@color/white"
                        app:qmui_borderColor="@color/white"
                        app:qmui_radius="4dp">

                        <ImageView
                            android:id="@+id/iv_breakfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dimen_8"
                            android:background="@mipmap/icon_breakfast"/>

                        <TextView
                            android:id="@+id/tv_breakfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:layout_toRightOf="@+id/iv_breakfast"
                            android:text="早餐已摄入"
                            android:textColor="@color/GrayWrite"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_breakfast_kcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_breakfast"
                            android:layout_toRightOf="@+id/iv_breakfast"
                            android:maxLength="5"
                            android:maxLines="1"
                            android:text="--"
                            android:textColor="@color/orange_FF7200"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="231.0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_breakfast_kcal"
                            android:layout_toRightOf="@+id/tv_breakfast_kcal"
                            android:text=" kcal"
                            android:textColor="@color/orange_FF7200"
                            android:textSize="13sp"/>

                        <ImageView
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_20"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/icon_add"/>


                    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                        android:id="@+id/layout_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingRight="@dimen/dimen_16"
                        app:qmui_backgroundColor="@color/white"
                        app:qmui_borderColor="@color/white"
                        app:qmui_radius="4dp">

                        <ImageView
                            android:id="@+id/iv_lunch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dimen_8"
                            android:background="@mipmap/icon_lunch"/>

                        <TextView
                            android:id="@+id/tv_lunch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:layout_toRightOf="@+id/iv_lunch"
                            android:text="午餐已摄入"
                            android:textColor="@color/GrayWrite"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_lunch_kcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_lunch"
                            android:layout_toRightOf="@+id/iv_lunch"
                            android:maxLength="5"
                            android:text="--"
                            android:textColor="@color/orange_FF7200"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="223"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_lunch_kcal"
                            android:layout_toRightOf="@+id/tv_lunch_kcal"
                            android:text=" kcal"
                            android:textColor="@color/orange_FF7200"
                            android:textSize="13sp"/>


                        <ImageView
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_20"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/icon_add"/>


                    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                        android:id="@+id/layout_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingRight="@dimen/dimen_16"
                        app:qmui_backgroundColor="@color/white"
                        app:qmui_borderColor="@color/white"
                        app:qmui_radius="4dp">

                        <ImageView
                            android:id="@+id/iv_dinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dimen_8"
                            android:background="@mipmap/icon_dinner"/>

                        <TextView
                            android:id="@+id/tv_dinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:layout_toRightOf="@+id/iv_dinner"
                            android:text="晚餐已摄入"
                            android:textColor="@color/GrayWrite"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_dinner_kcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_dinner"
                            android:layout_toRightOf="@+id/iv_dinner"
                            android:maxLength="5"
                            android:text="--"
                            android:textColor="@color/orange_FF7200"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="223"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_dinner_kcal"
                            android:layout_toRightOf="@+id/tv_dinner_kcal"
                            android:text=" kcal"
                            android:textColor="@color/orange_FF7200"
                            android:textSize="13sp"/>

                        <ImageView
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_20"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/icon_add"/>


                    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                        android:id="@+id/layout_meal"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingRight="@dimen/dimen_16"
                        app:qmui_backgroundColor="@color/white"
                        app:qmui_borderColor="@color/white"
                        app:qmui_radius="4dp">

                        <ImageView
                            android:id="@+id/iv_meal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dimen_8"
                            android:background="@mipmap/icon_meal"/>

                        <TextView
                            android:id="@+id/tv_meal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:layout_toRightOf="@+id/iv_meal"
                            android:text="加餐已摄入"
                            android:textColor="@color/GrayWrite"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meal_kcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_meal"
                            android:layout_toRightOf="@+id/iv_meal"
                            android:maxLength="5"
                            android:text="--"
                            android:textColor="@color/orange_FF7200"
                            android:textSize="18sp"
