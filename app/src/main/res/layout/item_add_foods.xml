<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_250">


    <ImageView
        android:id="@+id/img_food"
        android:layout_width="@dimen/d_250"
        android:layout_height="@dimen/d_250"
        android:layout_centerVertical="true"
        android:padding="@dimen/d_50"/>

    <TextView
        android:id="@+id/tv_food"
        android:layout_width="@dimen/d_300"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d_50"
        android:layout_toRightOf="@+id/img_food"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/d_40"
        tools:text="瘦肉粥"/>

    <TextView
        android:id="@+id/tv_foodWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="600px"
        android:textColor="@color/textHeatColor"
        android:textSize="@dimen/d_40"
        tools:text="250.0克"/>

    <TextView
        android:id="@+id/tv_foodKcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d_50"
        android:textColor="@color/colorTheme"
        android:textSize="@dimen/d_40"
        tools:text="116千卡"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1"
        android:background="@color/lineColor"/>

</RelativeLayout>