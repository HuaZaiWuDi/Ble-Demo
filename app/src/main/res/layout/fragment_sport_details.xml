<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.qmuiteam.qmui.widget.QMUITopBar
                android:id="@+id/QMUIAppBarLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/topBarHeight"
                android:hapticFeedbackEnabled="true"
                app:qmui_topbar_bg_color="@color/Gray"
                app:qmui_topbar_left_back_drawable_id="@mipmap/back_icon"
                app:qmui_topbar_need_separator="false"
                app:qmui_topbar_title_color="@color/white"
                />


            <RelativeLayout
                android:id="@+id/layout_shareTitle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:paddingLeft="24dp"
                android:paddingTop="24dp"
                android:paddingRight="24dp"
                android:visibility="gone">


                <com.vondear.rxtools.view.layout.RxImageView
                    android:id="@+id/img_userImg"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:icon_src_normal="@color/orange_FF7200"
                    app:is_circle="true"/>


                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/img_userImg"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="11/1"
                    android:textColor="@color/white"
                    android:textSize="23sp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#605768"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/tv_detailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="消耗热量"
                    android:textColor="@color/GrayWrite"
                    android:textSize="13sp"/>


                <TextView
                    android:id="@+id/tv_kcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sw_music"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="69sp"
                    android:textStyle="bold"
                    tools:text="68.7"/>


            </RelativeLayout>


            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:alignContent="center"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:maxLine="2"
                >

                <!--平均配速-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_flexBasisPercent="33%">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@mipmap/ic_average_pace"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平均配速"
                        android:textColor="@color/GrayWrite"
                        android:textSize="11sp"/>


                    <TextView
                        android:id="@+id/tv_avPace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        tools:text="110"/>

                </LinearLayout>

                <!--最大配速-->
                <LinearLayout
                    android:id="@+id/layout_maxPace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_flexBasisPercent="33%"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@mipmap/ic_maximum_pace"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最大配速"
                        android:textColor="@color/GrayWrite"
                        android:textSize="11sp"/>


                    <TextView
                        android:id="@+id/tv_maxPace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        tools:text="110"/>


                </LinearLayout>

                <!--消耗热量-->
                <LinearLayout
                    android:id="@+id/layout_sportingKcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_flexBasisPercent="33%"
                    tools:visibility="gone">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@mipmap/icon_sporting_kcal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消耗热量"
                        android:textColor="@color/GrayWrite"
                        android:textSize="11sp"/>


                    <TextView
                        android:id="@+id/tv_sportskcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--kcal"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        tools:text="--kcal"/>

                </LinearLayout>

                <!--运动时长-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_flexBasisPercent="33%">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@mipmap/ic_time"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有效运动时长"
                        android:textColor="@color/GrayWrite"
                        android:textSize="11sp"/>


                    <TextView
                        android:id="@+id/tv_sportsTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00'00''"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        tools:text="12'02''"/>


                </LinearLayout>

                <!--步频-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_flexBasisPercent="33%">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@mipmap/ic_step_frequency"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="步频"
                        android:textColor="@color/GrayWrite"
                        android:textSize="11sp"/>


                    <TextView
                        android:id="@+id/tv_stepFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        tools:text="--"/>


                </LinearLayout>

                <!--运动距离-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_flexBasisPercent="33%">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@mipmap/ic_distance"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="距离"
                        android:textColor="@color/GrayWrite"
                        android:textSize="11sp"/>


                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--km"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        tools:text="0km"
                        />


                </LinearLayout>

            </com.google.android.flexbox.FlexboxLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:orientation="horizontal"
                tools:visibility="visible">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone">


                    <com.vondear.rxtools.view.chart.bar.BarVerticalChart
                        android:id="@+id/bar_calm"
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        app:barWidth="46dp"
                        app:cornerRadius="2dp"
                        app:progressColor="@color/Gray_DCDAE6"/>

                    <TextView
                        android:id="@+id/tv_calm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        tools:text="0%"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <com.vondear.rxtools.view.chart.bar.BarVerticalChart
                        android:id="@+id/bar_warm"
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        app:barWidth="46dp"
                        app:cornerRadius="2dp"
                        app:progressColor="@color/warm"/>

                    <TextView
                        android:id="@+id/tv_warm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        tools:text="0%"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <com.vondear.rxtools.view.chart.bar.BarVerticalChart
                        android:id="@+id/bar_grease"
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        app:barWidth="46dp"
                        app:cornerRadius="2dp"
                        app:progressColor="@color/fatBurning"/>

                    <TextView
                        android:id="@+id/tv_grease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        tools:text="0%"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <com.vondear.rxtools.view.chart.bar.BarVerticalChart
                        android:id="@+id/bar_aerobic"
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        app:barWidth="46dp"
                        app:cornerRadius="2dp"
                        app:progressColor="@color/aerobic"/>

                    <TextView
                        android:id="@+id/tv_aerobic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        tools:text="0%"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <com.vondear.rxtools.view.chart.bar.BarVerticalChart
                        android:id="@+id/bar_anaerobic"
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        app:barWidth="46dp"
                        app:cornerRadius="2dp"
                        app:progressColor="@color/anaerobic"/>

                    <TextView
                        android:id="@+id/tv_anaerobic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        tools:text="0%"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <com.vondear.rxtools.view.chart.bar.BarVerticalChart
                        android:id="@+id/bar_limit"
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        app:barWidth="46dp"
                        app:cornerRadius="2dp"
                        app:progressColor="@color/limit"/>

                    <TextView
                        android:id="@+id/tv_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        tools:text="0%"/>

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/layout_legend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="8dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_heartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="5/5"/>


                <TextView
                    android:id="@+id/tv_expectKcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/tv_heartCount"
                    android:text="@string/expectKcal"
                    android:textColor="@color/GrayWrite"
                    android:textSize="8sp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <View
                        android:layout_width="12dp"
                        android:layout_height="2dp"
                        android:background="@color/black_3F3943"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="计划"
                        android:textColor="@color/GrayWrite"
                        android:textSize="8sp"/>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="2dp"
                        android:background="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="实时"
                        android:textColor="@color/GrayWrite"
                        android:textSize="8sp"/>

                </LinearLayout>

            </RelativeLayout>

            <com.vondear.rxtools.view.layout.RxRelativeLayout
                android:id="@+id/layout_sporting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_legend"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="31dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="pace"
                            android:textColor="@color/white"
                            android:textSize="6sp"/>


                        <TextView
                            android:id="@+id/tv_currentTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textSize="8dp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="138dp"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <!--极限-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            >

                            <com.vondear.rxtools.view.layout.RxTextView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:alpha="1"
                                android:gravity="center"
                                android:text="@string/limit"
                                android:textColor="@color/GrayWrite"
                                android:textSize="11sp"
                                />

                            <com.vondear.rxtools.view.layout.RxView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:background="@color/limit"
                                app:corner_radius_top_left="4dp"
                                app:corner_radius_top_right="4dp"/>


                        </LinearLayout>
                        <!--无氧-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:alpha="1"
                                android:gravity="center"
                                android:text="@string/anaerobic"
                                android:textColor="@color/GrayWrite"
                                android:textSize="11sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:background="@color/anaerobic"/>

                        </LinearLayout>
                        <!--有氧-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:alpha="1"
                                android:gravity="center"
                                android:text="@string/aerobic"
                                android:textColor="@color/GrayWrite"
                                android:textSize="11sp"/>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:background="@color/aerobic"/>

                        </LinearLayout>
                        <!--燃脂-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:alpha="1"
                                android:gravity="center"
                                android:text="@string/grease"
                                android:textColor="@color/GrayWrite"
                                android:textSize="11sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:background="@color/fatBurning"/>


                        </LinearLayout>
                        <!--热身-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/warm"
                                android:textColor="@color/GrayWrite"
                                android:textSize="11sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:background="@color/warm"/>


                        </LinearLayout>
                        <!--静息-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            >

                            <com.vondear.rxtools.view.layout.RxTextView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/calm"
                                android:textColor="@color/GrayWrite"
                                android:textSize="11sp"
                                />

                            <com.vondear.rxtools.view.layout.RxView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:background="@color/resting"
                                app:corner_radius_bottom_left="4dp"
                                app:corner_radius_bottom_right="4dp"/>


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:text="time"
                        android:textColor="@color/white"
                        android:textSize="6sp"/>


                </LinearLayout>


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_HeartRate"
                    android:layout_width="325dp"
                    android:layout_height="138dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    >

                </com.github.mikephil.charting.charts.LineChart>


            </com.vondear.rxtools.view.layout.RxRelativeLayout>


            <LinearLayout
                android:id="@+id/layout_sportingTimeDetail"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_16"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                tools:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/limit"
                        android:textColor="@color/white"
                        android:textSize="13sp"/>


                    <com.vondear.rxtools.view.roundprogressbar.RxRoundProgressBar
                        android:id="@+id/pro_limit"
                        android:layout_width="221dp"
                        android:layout_height="8dp"
                        android:layout_marginLeft="24dp"
                        app:rcBackgroundColor="#312B36"
                        app:rcMax="100"
                        app:rcProgress="0"
                        app:rcProgressColor="@color/limit">

                    </com.vondear.rxtools.view.roundprogressbar.RxRoundProgressBar>

                    <TextView
                        android:id="@+id/tv_limit_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="00'00''"
                        android:textColor="@color/white"
                        android:textSize="13sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
