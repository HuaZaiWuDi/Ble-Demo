<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:qmui_backgroundColor="@color/white"
    app:qmui_borderColor="@color/white"
    app:qmui_radius="4dp"
    >


    <ImageView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="16dp"
        android:background="@mipmap/icon_delete2"/>


    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/img_food"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:qmui_border_color="@color/bg_F7F7F9"
        app:qmui_border_width="1dp"
        app:qmui_is_circle="true"
        tools:background="@drawable/eg"/>


    <TextView
        android:id="@+id/tv_foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/Gray"
        android:textSize="15sp"
        tools:text="瘦肉粥"/>

    <TextView
        android:id="@+id/tv_heat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:textColor="@color/GrayWrite"
        android:textSize="13sp"
        tools:text="116千卡/100克"/>


    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62px"
        android:drawableLeft="@mipmap/worning_icon"
        android:drawablePadding="@dimen/d_20"
        android:text="一碗粥等于200克"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">


        <com.vondear.rxtools.view.layout.RxEditText
            android:id="@+id/et_food_g"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="输入数量"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:textColor="@color/Gray"
            android:textColorHint="@color/BrightGray"
            android:textSize="15sp"
            android:textStyle="bold"
            app:background_normal="#FBFBFC"
            app:border_color_normal="#F7F7F9"
            app:corner_radius="4dp"
            tools:text="222"/>


        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="end"
            android:textColor="@color/orange_FF7200"
            android:textSize="20sp"
            tools:text="克"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.vondear.rxtools.view.layout.RxTextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="56px"
            app:background_normal="@color/BrightGray"
            app:corner_radius_bottom_left="4dp"/>

        <com.vondear.rxtools.view.layout.RxTextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="56px"
            app:background_normal="@color/orange_FF7200"
            app:corner_radius_bottom_right="4dp"/>
    </LinearLayout>


</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>