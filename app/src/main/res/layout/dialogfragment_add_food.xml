<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/d_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="@dimen/d_250"
            android:layout_height="@dimen/d_250"
            android:layout_marginTop="@dimen/d_100"/>

        <TextView
            android:id="@+id/tv_foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46px"
            android:textColor="@color/textColor"
            android:textSize="@dimen/d_60"
            tools:text="瘦肉粥"/>

        <TextView
            android:id="@+id/tv_heat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="116千卡/100克"
            android:textColor="@color/textHeatColor"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_1"
            android:layout_marginTop="80px"
            android:background="@color/lineColor"/>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62px"
            android:drawableLeft="@mipmap/worning_icon"
            android:drawablePadding="@dimen/d_20"
            android:text="一碗粥等于200克"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_50">

            <EditText
                android:id="@+id/et_food_g"
                android:layout_width="@dimen/d_450"
                android:layout_height="150px"
                android:layout_centerInParent="true"
                android:background="#F2F2F2"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/d_80"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_food_g"
                android:layout_marginLeft="@dimen/d_40"
                android:layout_toRightOf="@+id/et_food_g"
                android:text="@string/unit_g"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/d_50"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_80"
            android:layout_marginTop="100px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="350px"
                android:layout_height="138px"
                android:background="@mipmap/concel_button"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="56px"/>

            <TextView
                android:id="@+id/ok"
                android:layout_width="350px"
                android:layout_height="138px"
                android:layout_marginLeft="134px"
                android:background="@mipmap/confirm_button"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="56px"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>