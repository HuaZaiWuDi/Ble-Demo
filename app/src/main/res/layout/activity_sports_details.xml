<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".ui.main.slimming.sports.SportsDetailsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/barHeight"
        android:background="@drawable/shape_bg_statu_bar"
        android:paddingBottom="@dimen/d_30"
        android:paddingTop="90px">


        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/d_200"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <ImageView
                android:layout_width="@dimen/d_40"
                android:layout_height="@dimen/d_80"
                android:layout_marginLeft="@dimen/d_30"
                android:layout_marginTop="@dimen/d_20"
                android:src="@mipmap/back_icon"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:text="@string/sportsDetails"
            android:textColor="@color/white"
            android:textSize="@dimen/d_60"
            tools:text="运动详情"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_connectDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/d_50"
            android:layout_marginTop="@dimen/d_20"
            android:drawableLeft="@mipmap/connect_icon_green"
            android:drawablePadding="@dimen/d_20"
            android:text="@string/disConnected"
            android:textColor="@color/colorTheme"/>


        <TextView
            android:id="@+id/tv_Running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/d_50"
            android:layout_marginTop="@dimen/d_20"
            android:drawableLeft="@mipmap/icon_run"
            android:drawablePadding="@dimen/d_20"
            android:text="0步"
            android:textColor="@color/colorTheme"/>


        <TextView
            android:id="@+id/tv_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="状态"
            android:textColor="@color/textHeatColor"/>


        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_20"
            android:text="@string/startSports"
            android:textColor="@color/colorTheme"
            android:textSize="@dimen/d_50"/>

        <TextView
            android:id="@+id/tv_sportsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_50"
            android:text="00:00:00"
            android:textColor="@color/colorTheme"
            android:textSize="@dimen/d_120"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_200"
            android:layout_marginBottom="@dimen/d_50"
            android:layout_marginTop="@dimen/d_100"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/avgHeart"
                    android:textColor="@color/textHeatColor"
                    tools:text="当前心率"/>


                <TextView
                    android:id="@+id/tv_curHeart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d_20"
                    android:text="--bpm"
                    android:textColor="@color/colorTheme"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/maxHeart"
                    android:textColor="@color/textHeatColor"
                    tools:text="最高心率"/>


                <TextView
                    android:id="@+id/tv_maxHeart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d_20"
                    android:text="--bpm"
                    android:textColor="@color/colorTheme"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/heat"
                    android:textColor="@color/textHeatColor"/>


                <TextView
                    android:id="@+id/tv_heat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d_20"
                    android:text="@string/unit_kcal3"
                    android:textColor="@color/colorTheme"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:background="@color/bg_color"/>


    <lab.wesmartclothing.wefit.flyso.view.HeartRateView
        android:id="@+id/mHeartRateView"
        android:layout_width="match_parent"
        android:layout_height="600px"/>


</LinearLayout>