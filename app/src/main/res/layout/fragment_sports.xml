<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="850px"
            android:background="@mipmap/weight_upper_bg_iphone6_above"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_connectDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/d_100"
                android:layout_marginTop="230px"
                android:drawableLeft="@mipmap/connect_icon"
                android:drawablePadding="@dimen/d_20"
                android:text="@string/disConnected"
                android:textColor="@color/white"/>


            <me.dkzwm.widget.srl.HorizontalSmoothRefreshLayout
                android:id="@+id/mRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="230px"
                >

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/mLineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.github.mikephil.charting.charts.LineChart>

            </me.dkzwm.widget.srl.HorizontalSmoothRefreshLayout>


            <TextView
                android:id="@+id/tv_connectTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/d_100"
                android:background="@drawable/prompt_bg"
                android:paddingLeft="@dimen/d_50"
                android:paddingRight="@dimen/d_50"
                android:paddingTop="@dimen/d_25"
                android:text="@string/unbindDevice"
                android:textColor="@color/textColor"
                android:textSize="@dimen/d_40"
                android:visibility="gone"
                tools:visibility="visible"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/weight_lower_bg_iphone6_below">
        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_100"
                android:padding="@dimen/d_20">


                <TextView
                    android:id="@+id/tv_weight_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d_30"
                    android:drawableLeft="@mipmap/time_icon_green"
                    android:drawablePadding="@dimen/d_10"
                    android:textColor="@color/textHeatColor"
                    android:textSize="@dimen/d_35"
                    tools:text="2018-05-09"/>

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d_30"
                    android:drawablePadding="@dimen/d_20"
                    android:drawableRight="@mipmap/next_icon"
                    android:text="@string/details"
                    android:textColor="@color/textHeatColor"
                    tools:text="查看详情"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>