<resources>

    <!-- Base application theme. -->
    <!-- Customize your theme here. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">nosensor</item>
        <item name="QMUITopBarStyle">@style/QDTopBar</item>

        <item name="android:windowAnimationStyle">@style/activityAnimation</item>

    </style>

    <!-- 仿微信界面交互方式 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>


    <style name="StartTheme" parent="AppTheme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/img_start_up</item>

    </style>

    <!-- Application theme. -->

    <style name="QDTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">@color/white</item>
        <item name="qmui_topbar_title_color">@color/Gray</item>
        <item name="qmui_topbar_subtitle_color">@color/GrayWrite</item>
        <item name="qmui_topbar_height">@dimen/topBarHeight</item>
        <item name="qmui_topbar_image_btn_height">@dimen/topBarHeight</item>
        <item name="qmui_topbar_left_back_drawable_id">@mipmap/icon_back</item>
        <item name="qmui_topbar_need_separator">false</item>
    </style>


</resources>
