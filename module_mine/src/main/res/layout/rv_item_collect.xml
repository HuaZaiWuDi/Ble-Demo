<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_90"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_rv_item_collect"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_20" />

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_collect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_25"
        android:layout_toRightOf="@+id/iv_rv_item_collect"
        android:textColor="#212121"
        android:textSize="@dimen/dimen_15"
        android:textStyle="bold" />

    <TextView
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/tv_collect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_collect_title"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_toRightOf="@+id/iv_rv_item_collect"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_12" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray1" android:layout_alignParentBottom="true"/>
</RelativeLayout>