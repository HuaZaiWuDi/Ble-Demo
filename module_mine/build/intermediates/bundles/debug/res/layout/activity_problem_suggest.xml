<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FAFAFA"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40">

            <LinearLayout
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_2"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:src="@mipmap/left_back"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="问题与反馈"
                android:textColor="#212121"
                android:textSize="@dimen/dimen_18"
                android:textStyle="bold"/>
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title_bar"
        android:background="#ffffff"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:drawableLeft="@mipmap/icon_star"
                android:text="反馈类型"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/dimen_15"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/spinner_problem_type"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_25"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/round_indicator_bg"
                android:drawableRight="@drawable/arrow"
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_10"
                android:text="产品反馈"
                android:textSize="@dimen/dimen_14"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:drawableLeft="@mipmap/icon_star"
                android:text="问题描述与建议"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/dimen_15"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_data_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_title_bar"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/edit_data_bg"
                android:drawablePadding="@dimen/dimen_4"
                android:focusable="true"
                android:gravity="left|top"
                android:hint="请您详细描述问题发生的场景和现象，并添加截图，这将有助于我们快速解决您的问题。"
                android:maxLength="500"
                android:minLines="5"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_10"
                android:textColor="#212121"
                android:textColorHint="#cccccc"
                android:textSize="@dimen/dimen_15"/>

            <TextView
                android:id="@+id/tv_input_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:text="还可输入500字"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/dimen_10"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:text="添加截图"
                    android:textColor="#4D4D4D"
                    android:textSize="@dimen/dimen_15"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:text="（最多添加四张）"
                    android:textColor="#999999"
                    android:textSize="@dimen/dimen_11"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_15">

                <com.smartclothing.module_wefit.widget.ImageUploadView
                    android:id="@+id/iv_load"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:drawableLeft="@mipmap/icon_star"
                android:text="出现频率"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/dimen_15"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/spinner_frequency"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="@dimen/dimen_25"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/round_indicator_bg"
                android:drawableRight="@drawable/arrow"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10"
                android:text="很少出现"
                android:textSize="@dimen/dimen_14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:drawableLeft="@mipmap/icon_star"
                android:text="联系方式"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/dimen_15"
                android:textStyle="bold"/>

            <com.smartclothing.module_wefit.widget.MClearEditText
                android:id="@+id/et_problem_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_title_bar"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@drawable/edit_data_bg"
                android:drawablePadding="@dimen/dimen_4"
                android:focusable="true"
                android:gravity="left|top"
                android:hint="请输入电话或邮箱"
                android:minLines="1"
                android:paddingBottom="@dimen/dimen_10"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_10"
                android:textColor="#212121"
                android:textColorHint="#cccccc"
                android:textSize="@dimen/dimen_15"/>

            <TextView
                android:id="@+id/tv_problem_commit"
                android:layout_width="@dimen/dimen_120"
                android:layout_height="@dimen/dimen_42"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/btn_commit_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>