<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/dimen_10"
              android:layout_marginLeft="@dimen/dimen_15"
              android:layout_marginRight="@dimen/dimen_15"
              android:layout_marginTop="@dimen/dimen_10"
              android:background="@drawable/radiu_item_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_device_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_5">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_alignParentBottom="true"
            android:background="#FFFAFAFA"/>

        <ImageView
            android:id="@+id/iv_icon_body_fit_scale"
            android:layout_width="@dimen/dimen_15"
            android:layout_height="@dimen/dimen_15"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:src="@mipmap/icon_shebei"/>

        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_toRightOf="@+id/iv_icon_body_fit_scale"
            android:text="未添加"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/dimen_12"/>

        <ImageView
            android:id="@+id/iv_link_state_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_toLeftOf="@+id/tv_link_state_scale"
            android:src="@drawable/link_state_unable"/>

        <TextView
            android:id="@+id/tv_link_state_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15"
            android:text="无设备"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/dimen_12"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_140"
        android:background="#00ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/device_no_device_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_tianjia"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="暂无设备，请添加设备"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_12"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>