<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_140">

    <ImageView
        android:id="@+id/iv_device_burn"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_10"
        android:src="@mipmap/icon_ranzhiyi_big" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_toRightOf="@+id/iv_device_burn"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_device_id_burn"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:src="@mipmap/icon_ranzhiyi" />

        <TextView
            android:id="@+id/tv_device_id_burn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5"
            android:text="体脂秤"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/dimen_12" />

        <TextView
            android:id="@+id/tv_device_id_burn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30"
            android:text="564765"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/dimen_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_toRightOf="@+id/iv_device_burn"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_residual_electricity_burn"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:src="@mipmap/icon_dianliang" />

        <TextView
            android:id="@+id/tv_residual_electricity_burn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5"
            android:text="剩余电量"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/dimen_12" />

        <TextView
            android:id="@+id/tv_residual_electricity_burn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30"
            android:text="564765"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/dimen_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_toRightOf="@+id/iv_device_burn"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_standby_time_burn"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:src="@mipmap/icon_daiji" />

        <TextView
            android:id="@+id/tv_standby_time_burn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5"
            android:text="待机时长"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/dimen_12" />

        <TextView
            android:id="@+id/tv_standby_time_burn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30"
            android:text="564765"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/dimen_12" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:src="@mipmap/icon_shebeishanchu" />

</RelativeLayout>